<%- include ('../partials/messages') %>
<h1 class="mt-4">Home Page Patient</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<p class="lead mb-3"> <%= user.email %></p>
<br><br>
  <% if(typeof doctors !== 'undefined' && doctors.length >0){ %> <% doctors.forEach(function(doc) { %>
       <%if(doc.specialisation!='' && doc.qualifications !='' && doc.availableDays!=''){%>
    <div class="container justify-content-center postbox">
      <div class="container doctorName">
        <h3><i class="fas fa-user-md"></i> <%= doc.name %></h3>
      </div>
      <% if(doc.specialisation!=''){ %>
      <div class="container speciDoc mb-2" id="specialisation">
        <button class="btn-info">Specialisation </button>
        <h5  class="ml-3"> <%= doc.specialisation %></h5>
      </div><% } %>
      <% if(doc.qualifications!=''){ %>
      <div class="container qualiDoc  mb-2">
        <button class="btn-info">Qualifications</button>
        <h5 class="ml-3"> <%= doc.qualifications %></h5>
      </div><% } %>
      <% if(doc.fees!=''){ %>
      <div class="container fee mb-2">
        <button class="btn-info">Fees </button>
        <h5 class="ml-3"> <%= doc.fees %></h5>
      </div><% } %>
      <% if(doc.availableDays!=''){ %>
      <div class="container days mb-2">
        <button class="btn-info">Available Days </button>
        <h5 class="ml-3"> <%= doc.availableDays %></h5>
      </div><% } %>
      <% if(doc.availableHours!=''){ %>
      <div class="container hours mb-2">
        <button class="btn-info">Available Hours </button>
        <h5 class="ml-3"> <%= doc.availableHours %></h5>
      </div><% } %>
      <% if(doc.location!=''){ %>
        <div class="container location mb-2">
          <button class="btn-info">Location </button>
          <h5 class="ml-3"> <%= doc.location %></h5>
        </div><% } %>
        <% var flag=1; 
        user.appointPatient.forEach(function(email){
          if(email=== doc.email){
            flag=-1;
          }
        })
        if(flag===-1){ %> 

          <div class="container appointHere">
            <button  class="appointButton btn btn-danger">Appointment Booked</button>
          </div>

          <% } else { %>  
      <div class="container appointHere">
        <button class="appointButton btn btn-success" id='appointButton/<%= doc._id %>' onclick='appointFunction("<%= doc._id %>")' >Book Appointment</button>
      </div>
      <% } %>
      <br>
     <p class="dateToday"><%= doc.date%></p>
    </div><br><br>
    <% } %>
  <% }); %> <% } %>
   

<!-- on click function for appoint button  -->
<script>
  console.log('Client-side code running');

//when apply button is triggered
function appointFunction(PostID){

      var button=document.getElementById('appointButton/'+PostID);

      //Changes the green color to red
      //and Appointment to appointed,so that user get a message 
      //that his request has been sent
      button.innerHTML='Appointement booked';
      button.classList.remove('btn-primary');
      button.classList.add('btn-danger');

      //_id of post to which patiemt appointed
      //This is a primary key
      console.log(PostID);

    
      //-----------------XML http request------------------------

      //(so without rendering data will be feeded)
      var xhr=new window.XMLHttpRequest();
      
      xhr.open('GET','/user/clicked/'+PostID,true);
      xhr.setRequestHeader('Content-Type','application/json;charset=UTF-8');
      xhr.send();

}
</script>
