
<section class="box">
    <%- include ('../partials/navigation') %>
    <br><br><br>
    <div>
    <h1 class="mt-4">Present Appointments</h1>
    </div>
    <br><br>
  <% if(user.accepted.length==0){%> 
    <div class="container justify-content-center postbox2" style="height: 400px;right: 50px;">
      <h5 style="color: black;"> No Appointments Yet. </h5>
    </div>
    <% } else { 
  user.accepted.forEach(function(ele) { %>
      <div class="container justify-content-center postbox">
       <div class="container patientName"> <i class="fa fa-user-md"></i>
         Dr.<%= ele.name %> </div>
         <hr>
       <div class="container patage mb-2" id="age">
          <button class="btn-info">Email </button>
          <h5  class="ml-3"> <%= ele.email %></h5>
          </div>
          <div class="container patphone mb-2" id="phone">
            <button class="btn-info">Phone Number </button>
            <h5  class="ml-3"> <%= ele.phone %></h5>
            </div>
            <div class="container patphone mb-2" id="weight">
              <button class="btn-info"> Specialisation </button>
              <h5  class="ml-3"> <%= ele.specialisation %></h5>
              </div>
              <div class="container patphone mb-2" id="weight">
                <button class="btn-info"> Fees </button>
                <h5  class="ml-3">Rs. <%= ele.fees %></h5>
                </div>
             <br>
                <form action="/user/uploads/<%= ele.email %>" enctype="multipart/form-data" method="POST" >
                    <div class="container patphone mb-2" id="file">
                        <button class="btn-info"> Upload File </button>
                    
                        <input type="file" name="myImage" accept="image/*" value="" required>
                 
                    </div>
                    <div class="d-flex justify-content-center" style="size: 50%;">
                        <button type="submit" class="btn btn-primary ">Upload</button>
                      </div>
                </form> 
         <br>   
  <div class="container check">
    <a class="btn btn-success" href="/video/<%= ele.randomId%>" ><i class="fa fa-video-camera" aria-hidden="true"></i> Video Call</a><!--Add video call link in place of #-->
    <a class="btn btn-success" href="/room/<%= ele.email%>+<%=user.email%>" ><i class="fa fa-comments-o" aria-hidden="true"></i> Chat</a><!--Add chatlink in place of # "/chat/<%= ele.randomId%>" -->
          <br><br>
          <a class="btn btn-success btn-block" href="/user/home" >Done</a>
          <br>
        </div>  
      </div>
  <% }) ;%>
  <% } %> 
  </section>
  