<section class="register">
  <%- include ('partials/design') %>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="left: 280px; -webkit-box-shadow: -2px 4px 24px -2px rgba(10,10,10,1);
      -moz-box-shadow: -2px 4px 24px -2px rgba(10,10,10,1);
      box-shadow: -2px 4px 24px -2px rgba(10,10,10,1);">
        <h1 class="text-center mb-3"><i class="fa fa-sign-in"></i>  Login</h1>
        <%- include ('partials/messages') %>
        <form action="/user/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button id='SubmitButton' type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <!--<p class="lead mt-4">
          No Account? <a href="/user/register">Register</a>
        </p>-->
      </div>
    </div>
  </div>
</section>
  <%- include ('partials/footer') %>