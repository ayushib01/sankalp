<%- include ('../partials/navigationDoc') %>

  <div class="fluid-container portfolioBG">
        <div class="portfolioHeading">
            <h4 style="color:balck">CREATE PROFILE</h4>
            <h5 style="color: black;"><%= user.name %></h5>
            <h5 style="color: black;"><%= user.email %></h5>
       <%- include ('../partials/messages') %>
        </div>
    <div class="col-md-6 m-auto">  
        <form action="/doctor/profileDoc" method="POST" class="portfolioForm">
          <div class="form-group">
            <label for="location">Location</label>
            <input
              type="location"
              id="location"
              name="location"
              class="form-control"
              placeholder="Enter Location"
              value="<%= typeof location != 'undefined' ? location : '' %>"/>
          </div>
          <div class="form-group">
            <label for="age">Age</label>
            <input
              type="age"
              id="age"
              name="age"
              class="form-control"
              placeholder="Enter age"
              value="<%= typeof age != 'undefined' ? age : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="phone">Phone</label>
            <input
              type="phone"
              id="phone"
              name="phone"
              class="form-control"
              placeholder="Enter Phone number"
              value="<%= typeof phone != 'undefined' ? phone : '' %>"/>
          </div>
          <div class="form-group ">
            <label for="gender">Gender </label><br>
            <input type="radio" name="gender" value='Female'> <label for="gender"> Female</label><br>
            <input type="radio" name="gender" value='Male'>   <label for="gender"> Male</label><br>
            <input type="radio" name="gender" value='others'> <label for="gender"> others</label><br>
          </div>
          <!---extra details-->
          <div class="form-group">
            <label for="specialisation">Specialisation</label>
            <input
              type="specialisation"
              id="specialisation"
              name="specialisation"
              class="form-control"
              placeholder="Enter specialisation"
              value="<%= typeof specialisation!= 'undefined' ? specialisation : '' %>"/>
          </div>
          <div class="form-group">
            <label for="fees">Fees</label>
            <input
              type="fees"
              id="fees"
              name="fees"
              class="form-control"
              placeholder="Enter fees"
              value="<%= typeof fees!= 'undefined' ? fees : '' %>"/>
          </div>
          <div class="form-group">
            <label for="availableDays">Available Days</label>
            <input
              type="availableDays"
              id="availableDays"
              name="availableDays"
              class="form-control"
              placeholder="Enter available days "
              value="<%= typeof availableDays!= 'undefined' ? availableDays : '' %>"/>
          </div>
          <div class="form-group">
            <label for="availableHours">Available Hours</label>
            <input
              type="availableHours"
              id="availableHours"
              name="availableHours"
              class="form-control"
              placeholder="Enter available hours (example 12pm to 5pm)"
              value="<%= typeof availableHours!= 'undefined' ? availableHours: '' %>"/>
          </div>
          <div class="form-group">
            <label for="qualifications">Qualifications</label>
            <input
              type="qualifications"
              id="qualifications"
              name="qualifications"
              class="form-control"
              placeholder="Enter qualifications "
              value="<%= typeof qualifications!= 'undefined' ? qualifications : '' %>"/>
          </div>
          <div class="d-flex justify-content-center" style="size: 50%;">
          <button type="submit" class="btn btn-primary btn-block">Submit Details</button></div>
          </form>
      </div>
    </div>
  
    <%- include ('../partials/footer') %>
