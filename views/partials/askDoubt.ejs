<div class="modal fade" id="askModal" tabindex="-1" role="dialog" aria-labelledby="askModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="askModalTitle">Ask A Doubt</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
  
          <form action="/user/doubt" method="POST">
            <h4 style="color:#007bff">Doubt section</h4>
            <div class="form-group">
                <label for="doubt">What's Your Doubt</label>
                <input
                  type="doubt"
                  id="doubt"
                  name="doubt"
                  class="form-control"
                  placeholder="Enter Doubt here"
                  value="<%= typeof doubt != 'undefined' ? doubt : '' %>"/></div>            
            <button type='submit' class="btn btn-primary">Submit</button>
  
          </form>
             
        </div> 
      </div>
    </div>
  </div>